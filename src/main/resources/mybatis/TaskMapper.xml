<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tilitili.common.mapper.TaskMapper">
	<resultMap id="TaskResultMap" type="com.tilitili.common.entity.Task">
		<result column="create_time" property="createTime" />
		<result column="update_time" property="updateTime" />
	</resultMap>
	<select id="count" resultType="Integer">
		select count(1) from task
		<where>
			<if test="id != null">
				and task.id = #{id}
			</if>
			<if test="av != null">
				and task.av = #{av}
			</if>
			<if test="status != null">
				and task.status = #{status}
			</if>
			<if test="type != null">
				and task.type = #{type}
			</if>
		</where>
	</select>
	<select id="list" resultMap="TaskResultMap">
		select * from task
		<where>
			<if test="id != null">
				and task.id = #{id}
			</if>
			<if test="av != null">
				and task.av = #{av}
			</if>
			<if test="status != null">
				and task.status = #{status}
			</if>
			<if test="type != null">
				and task.type = #{type}
			</if>
		</where>
		<if test="sorter != null and sorted != null">
			order by [${sorter}] ${sorted}
		</if>
		<if test="sorter == null or sorted == null">
			order by id desc
		</if>
		<if test="start != null and pageSize != null">
			offset ${start} rows fetch next ${pageSize} rows only
		</if>
	</select>
	<insert id="insert" keyProperty="id" parameterType="com.tilitili.common.entity.Task" useGeneratedKeys="true">
		insert into task (
			<trim suffixOverrides=",">
				<if test="av != null">av,</if>
				create_time,
				update_time,
				status,
				<if test="type != null">type,</if>
			</trim>
		) values (
			<trim suffixOverrides=",">
				<if test="av != null">#{av},</if>
				getdate(),
				getdate(),
				0,
				<if test="type != null">#{type},</if>
			</trim>
		)
	</insert>
	<update id="update">
		update task
		<set>
			<if test="status != null">
				task.status = #{status},
			</if>
			<if test="remark != null">
				task.remark = #{remark},
			</if>
		</set>
		where id = #{id}
	</update>
</mapper>