<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tilitili.common.mapper.OwnerMapper">
  <resultMap id="OwnerResultMap" type="com.tilitili.common.entity.Owner">
    <result column="vip_type" property="vipType" />
  </resultMap>

  <select id="count" resultType="Integer">
    select count(1) from owner
    <where>
      <if test="uid != null">
        and task.uid = #{uid}
      </if>
      <if test="name != null">
        and task.name = #{name}
      </if>
    </where>
  </select>
  <select id="list" resultMap="OwnerResultMap">
    select * from task
    <where>
      <if test="uid != null">
        and task.uid = #{uid}
      </if>
      <if test="name != null">
        and task.name = #{name}
      </if>
    </where>
    <if test="sorter != null and sorted != null">
      order by [${sorter}] ${sorted}
    </if>
    <if test="sorter == null or sorted == null">
      order by uid desc
    </if>
    <if test="start != null and pageSize != null">
      offset ${start} rows fetch next ${pageSize} rows only
    </if>
  </select>
  <insert id="insert" keyProperty="id" useGeneratedKeys="true">
    insert into owner
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="uid != null">
        [uid],
      </if>
      <if test="name != null">
        [name],
      </if>
      <if test="face != null">
        face,
      </if>
      <if test="vipType != null">
        vip_type,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="uid != null">
        #{uid,jdbcType=NUMERIC},
      </if>
      <if test="name != null">
        #{name,jdbcType=NVARCHAR},
      </if>
      <if test="face != null">
        #{face,jdbcType=NVARCHAR},
      </if>
      <if test="vipType != null">
        #{vipType,jdbcType=NUMERIC},
      </if>
    </trim>
  </insert>
  <update id="update">
    update owner
    <set>
      <if test="name != null">
        [name] = #{name,jdbcType=NVARCHAR},
      </if>
      <if test="face != null">
        face = #{face,jdbcType=NVARCHAR},
      </if>
      <if test="vipType != null">
        vip_type = #{vipType,jdbcType=NUMERIC},
      </if>
    </set>
    where [uid] = #{uid,jdbcType=NUMERIC}
  </update>
</mapper>